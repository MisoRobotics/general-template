root = true

[*]
indent_style = space
indent_size = 2
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[{Dockerfile,*.dockerfile}]
indent_style = space
indent_size = 4

[*.{js,py}]
charset = utf-8

[*.py]
indent_style = space
indent_size = 4

[Makefile]
indent_style = tab
indent_size = 8

[{*.sh,*.bash,*.zsh,*.sh.in,*.bash.in,*.sh.*.in,*.bash.*.in}]
indent_style = tab
indent_size = 4

[{CMakelists.txt,*.cmake}]
indent_style = space
indent_size = 2

[{*.yml,*.yaml,*.rosinstall,*.repos}]
indent_style = space
indent_size = 2
